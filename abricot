#!/bin/bash
if [[ $# -eq 1 ]]
then
    if [[ $1 == "-update" || $1 == "--update" ]]
    then
        val=`pwd`
        cd /usr/local/lib/Abricot_update
        git pull
        sh install_abricot.sh
        cd $val
    elif [[ $1 == "--all" ]]
    then
        python3 /usr/local/lib/Abricot_scripts/brico.py --all
    fi
else
    if [[ -z "${JENKINS}" ]]
    then
        python3 /usr/local/lib/Abricot_scripts/brico.py
    else
        python3 ${WORKSPACE}/brico.py
    fi
fi
